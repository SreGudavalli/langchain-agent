    "import os\n",
    "import requests\n",
    "from langchain.llms import OpenAI\n",
    "from langchain.agents import AgentType, initialize_agent, load_tools\n",
    "from langchain.tools import Tool\n",
    "\n",
    "# Set your environment variables for the API keys\n",
    "#os.environ[\"OPENWEATHERMAP_API_KEY\"] = \"{{OPENWEATHERMAP_API_KEY}}\"\n",
    "\n",
    "# Initialize the OpenAI model\n",
    "llm = OpenAI(temperature=0.0, openai_api_key=os.environ[\"OPENAI_API_KEY\"])\n",
    "\n",
    "# Function to get current weather data\n",
    "def get_weather_data(city):\n",
    "    api_key = os.environ[\"OPENWEATHERMAP_API_KEY\"]\n",
    "    url = f\"https://api.openweathermap.org/data/2.5/weather?q={city},uk&APPID={api_key}\"\n",
    "    response = requests.get(url)\n",
    "    if response.status_code == 200:\n",
    "        return response.json()\n",
    "    else:\n",
    "        raise Exception(f\"Failed to fetch current weather data: {response.status_code}, {response.text}\")\n",
    "\n",
    "# Function to get weather forecast data\n",
    "def get_weather_forecast(city):\n",
    "    api_key = os.environ[\"OPENWEATHERMAP_API_KEY\"]\n",
    "    url = f\"https://api.openweathermap.org/data/2.5/forecast?q={city}&appid={api_key}&units=metric\"\n",
    "    response = requests.get(url)\n",
    "    if response.status_code == 200:\n",
    "        return response.json()\n",
    "    else:\n",
    "        raise Exception(f\"Failed to fetch weather forecast data: {response.status_code}, {response.text}\")\n",
    "\n",
    "# Define a custom weather tool\n",
    "def weather_tool_func(city: str) -> str:\n",
    "    try:\n",
    "        # Fetch current weather\n",
    "        current_weather = get_weather_data(city)\n",
    "        current_temp = current_weather[\"main\"][\"temp\"]\n",
    "        #print(current_weather)\n",
    "        #print(current_temp)\n",
    "        \n",
    "        # Fetch weather forecast\n",
    "        forecast_data = get_weather_forecast(city)\n",
    "        forecast_temps = [entry[\"main\"][\"temp\"] for entry in forecast_data[\"list\"]]\n",
    "        #print(forecast_data)\n",
    "        #print(forecast_temps)\n",
    "        avg_forecast_temp = sum(forecast_temps) / len(forecast_temps)\n",
    "        \n",
    "        return (\n",
    "            f\"The current temperature in {city} is {current_temp}°C. \"\n",
    "            f\"The average temperature over the next few days is approximately {avg_forecast_temp:.2f}°C.\"\n",
    "        )\n",
    "    except Exception as e:\n",
    "        return f\"Error: {str(e)}\"\n",
    "\n",
    "# Wrap the custom weather tool using LangChain's Tool class\n",
    "weather_tool = Tool(\n",
    "    name=\"Weather Tool\",\n",
    "    func=lambda query: weather_tool_func(query),\n",
    "    description=\"Provides the current temperature and average forecast for a city.\"\n",
    ")\n",
    "\n",
    "# Load additional tools (if needed)\n",
    "tools = load_tools([\"llm-math\"], llm=llm) + [weather_tool]\n",
    "\n",
    "# Initialize the agent\n",
    "agent = initialize_agent(\n",
    "    tools=tools,\n",
    "    llm=llm,\n",
    "    agent=AgentType.ZERO_SHOT_REACT_DESCRIPTION,\n",
    "    verbose=True\n",
    ")\n",
    "\n",
    "# User's query\n",
    "query = \"What is the current temperature in London?\"\n",
    "\n",
    "# Agent's response\n",
    "response = agent.run(query)\n",
    "print(response)\n"
   ]
  }
